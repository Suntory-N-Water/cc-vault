{
  "name": "cc-vault",
  "version": "1.0.8",
  "type": "module",
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:cf": "opennextjs-cloudflare build && pnpm run dev",
    "build": "next build",
    "build:cf": "opennextjs-cloudflare build",
    "schedule": "opennextjs-cloudflare build && wrangler dev --test-scheduled",
    "start": "next start",
    "lint": "biome lint ./src",
    "lint:fix": "biome lint --write ./src",
    "format": "biome format ./src",
    "prepare": "husky",
    "test": "vitest run",
    "test:cov": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "ai-check": "pnpm run typecheck && pnpm run lint",
    "preview": "opennextjs-cloudflare build && opennextjs-cloudflare preview",
    "deploy": "opennextjs-cloudflare build && opennextjs-cloudflare deploy",
    "upload": "pnpm run db:local:all && opennextjs-cloudflare build && opennextjs-cloudflare upload",
    "typegen": "wrangler types --env-interface CloudflareEnv cloudflare-env.d.ts",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:local": "tsx scripts/migrate.ts local latest",
    "db:local:all": "tsx scripts/migrate.ts local all",
    "db:backup:prod": "tsx scripts/backup-production.ts"
  },
  "dependencies": {
    "@date-fns/tz": "^1.4.1",
    "@google/genai": "^1.33.0",
    "@libsql/client": "^0.15.15",
    "@opennextjs/cloudflare": "^1.14.4",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@slack/web-api": "^7.13.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "drizzle-orm": "^0.44.7",
    "linkedom": "^0.18.12",
    "lucide-react": "^0.541.0",
    "next": "15.5.7",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@cloudflare/workers-types": "^4.20251211.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.10.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^3.2.4",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.8",
    "happy-dom": "^18.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4",
    "wrangler": "^4.54.0"
  }
}
